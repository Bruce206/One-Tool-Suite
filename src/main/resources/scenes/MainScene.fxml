<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import com.cathive.fonts.fontawesome.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.bruss.main.MainSceneCtrl">
	<top>
		<MenuBar BorderPane.alignment="TOP_CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Datei">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#changeSettings" text="Einstellungen" />
						<MenuItem mnemonicParsing="false" onAction="#checkForUpdates" text="Nach Updates suchen" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<fx:include fx:id="deploymentTab" source="deploymentTab.fxml" BorderPane.alignment="CENTER" />
	</center>
	<bottom>
		<BorderPane>
			<center>
				<TextArea fx:id="consoleout" editable="false" BorderPane.alignment="CENTER">
					<font>
						<Font size="11.0" />
					</font>
				</TextArea>
			</center>
			<top>
				<BorderPane BorderPane.alignment="CENTER">
					<right>
						<HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="BOTTOM_RIGHT">
							<children>
								<Button mnemonicParsing="false" onAction="#toggleConsoleout" text="" textAlignment="CENTER">
									<graphic>
										<FontAwesomeIconView icon="ICON_SORT" />
									</graphic>
								</Button>
								<Button mnemonicParsing="false" onAction="#clearLog" text="">
									<graphic>
										<FontAwesomeIconView icon="ICON_ERASER" />
									</graphic>
								</Button>
							</children>
						</HBox>
					</right>
					<left>
						<ProgressBar fx:id="progressBar" prefHeight="44.0" prefWidth="547.0" progress="0.0" visible="false" BorderPane.alignment="CENTER">
							<effect>
								<Blend />
							</effect>
							<padding>
								<Insets left="100.0" />
							</padding>
						</ProgressBar>
					</left>
				</BorderPane>
			</top>
		</BorderPane>
	</bottom>
</BorderPane>
