<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.bruss.deployment.EditConfigCtrl">
	<center>
		<GridPane>
			<children>
				<Label text="Allgemeines" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
					<font>
						<Font name="Roboto Bold" size="15.0" />
					</font>
				</Label>
				<Label text="Name" GridPane.rowIndex="2" />
				<TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="2" />

				<Label text="Hostname / IP" GridPane.rowIndex="3" />
				<TextField fx:id="host" GridPane.columnIndex="1" GridPane.rowIndex="3" />
				<Label text="Spring Boot" GridPane.rowIndex="4" GridPane.valignment="BOTTOM">
					<font>
						<Font name="Roboto Bold" size="15.0" />
					</font>
				</Label>
				<Label text="Service / Jar Name" GridPane.rowIndex="5" />

				<TextField fx:id="serviceName" promptText="name des upstart-scripts &amp; des jar-files" GridPane.columnIndex="1" GridPane.rowIndex="5" />

				<Label text="App-Port" GridPane.rowIndex="6" />
				<TextField fx:id="port" promptText="nie 80 oder 8080" GridPane.columnIndex="1" GridPane.rowIndex="6" />

				<Label text="Jar-Verzeichnis Lokal" GridPane.rowIndex="7" />
				<TextField fx:id="localPath" promptText="normalerweise /target" GridPane.columnIndex="1" GridPane.rowIndex="7" />
				<Button mnemonicParsing="false" onAction="#searchJarPath" GridPane.columnIndex="2" GridPane.rowIndex="7">
					<graphic>
						<ImageView fitHeight="17.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../images/folder_explore.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>

				<Label text="Server-Verzeichnis" GridPane.rowIndex="8" />
				<TextField fx:id="remotePath" promptText="Bspw.: /wwwhome/foo" GridPane.columnIndex="1" GridPane.rowIndex="8" />
				<Label text="Datenbank" GridPane.columnSpan="2147483647" GridPane.rowIndex="9" GridPane.valignment="BOTTOM">
					<font>
						<Font name="Roboto Bold" size="15.0" />
					</font>
				</Label>
				<Label text="Name Lokal" GridPane.rowIndex="10" />
				<TextField fx:id="localDbName" GridPane.columnIndex="1" GridPane.rowIndex="10" />
				<Label text="Name Server" GridPane.rowIndex="11" />
				<TextField fx:id="remoteDbName" GridPane.columnIndex="1" GridPane.rowIndex="11" />

			</children>
			<padding>
				<Insets left="10.0" right="10.0" top="10.0" />
			</padding>
			<columnConstraints>
				<ColumnConstraints maxWidth="218.0" minWidth="115.0" prefWidth="136.0" />
				<ColumnConstraints maxWidth="286.0" minWidth="164.0" prefWidth="188.0" />
				<ColumnConstraints maxWidth="95.0" minWidth="10.0" prefWidth="42.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints minHeight="30.0" prefHeight="30.0" />
				<RowConstraints />
				<RowConstraints minHeight="10.0" prefHeight="30.0" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" />
				<RowConstraints minHeight="30.0" prefHeight="30.0" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" />
				<RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
				<RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
			</rowConstraints>
		</GridPane>
	</center>
	<bottom>
		<HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
			<children>
				<Button mnemonicParsing="false" onAction="#addConfig" text="" style="-fx-base: #9DD6FB;">
					<font>
						<Font size="22.0" />
					</font>
					<graphic>
						<FontAwesomeIconView icon="ICON_FILE_ALT" />
					</graphic>
				</Button>
				<Button mnemonicParsing="false" onAction="#delete" text="" style="-fx-base: #eeaaaa;">
					<font>
						<Font size="22.0" />
					</font>
					<graphic>
						<FontAwesomeIconView icon="ICON_TRASH" />
					</graphic>
				</Button>
				<Button mnemonicParsing="false" onAction="#save" text="" style="-fx-base: #b6e7c9;">
					<font>
						<Font size="22.0" />
					</font>
					<graphic>
						<FontAwesomeIconView icon="ICON_SAVE" />
					</graphic>
				</Button>
			</children>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" />
			</BorderPane.margin>
		</HBox>
	</bottom>
</BorderPane>
